<%= form_for @task, validate: true do |f| %>
    <form role="form">
      <%= render 'errors' %>
      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control", validate: true %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control", validate: true %>
      </div>
      <div class="form-group">
        <%= f.label :due_date %><br>
        <%= f.text_field :due_date, class: "form-control", id: 'datetimepicker', validate: true %>
      </div>
      <div class="form-group">
        <%= f.label :priority, 'active' %>
        <%= f.radio_button :priority, 1, :checked => true %>
      </div>
      <div class="form-group">
        <%= f.label :priority, 'inactive' %>
        <%= f.radio_button :priority, 0%>
      </div>
      <div class="form-group">
        <%= f.label :priority, 'completed' %>
        <%= f.radio_button :priority, 2 %>
      </div>
      <p>
        <%= f.submit %>
      </p>
    </form>
<% end %>