<div class="task panel" id="task_<%= task.id %>">
  <div class="batch-delete">
    <%= check_box_tag 'task_ids[]', task.id, false %>
  </div>
  <div class="title-task">
    <%= link_to task.title, task_path(task) %>
    <div class="hover-over">
      <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info btn-xs", :remote => false %>
      <%= link_to 'Delete', task_path(task),
                  method: :delete,
                  data: { confirm: 'Are you sure?', :remote => false }, class: "btn btn-danger btn-xs" %>
    </div>
  </div>
  <hr>
  <p><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info btn-md" %></p>
  <p><%= link_to 'Delete', task_path(task),
                 method: :delete,
                 data: { confirm: 'Are you sure?' }, remote: true, class: "delete_task btn btn-danger btn-md" %>
  </p>
  <div class="panel-footer">
    <div class="priority">
      Priority: <%= task.priority %>
    </div>
    <div class="status">
      Change status to:
      <% if task.status == 'Inactive' or task.status == 'Completed' %>
          <%= link_to image_tag('active.png', class: "image-status"), task_path(task, task: {status: 'Active'}), method: :put %>
      <% else %>
          <%= link_to image_tag('completed.png', class: "image-status"), task_path(task, task: {status: 'Completed'}), method: :put %>
          <%= link_to image_tag('inactive.png', class: "image-status"), task_path(task, task: {status: 'Inactive'}), method: :put %>
      <% end %>
    </div>
  </div>
</div>


