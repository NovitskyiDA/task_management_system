<% @tasks.each do |task| %>
    <div class="task">
      <p class="title"><%= link_to task.title, task_path(task) %></p>
      <hr>
      <p><%= link_to 'Edit', edit_task_path(task) %></p>
      <p><%= link_to 'Delete', task_path(task),
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
      </p>
    </div>
<% end %>